{
  "compilerOptions": {
    "target": "ESNEXT",
    "lib": [],
    "module": "commonjs",
    "moduleResolution": "node",
    "composite": true,
    "declaration": true,
    "useDefineForClassFields": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@root/*": ["./*"],
      "@config": ["./config"],
      "@lib*": ["./lib/*", "./lib"],
      "@utils*": ["./lib/utils/*", "./lib/utils"],
      "@providers*": ["./lib/providers/*", "./lib/providers"]
    }
  },
  "include": [
    "src",
    "src/languages/**/*.json"
  ]
}
